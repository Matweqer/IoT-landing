section.partners(class=`${mix}` data-role="partners")
    .partners__container.container
        h2.partners__title Наши партнеры
        .partners__list
            -
                var partners = [{
                        description: 'ООО “ИЦ “Интегра”',
                        link: 'https://ec-integra.ru/',
                        img: 'img1',
                    },{
                        description: 'ФГАОУ ВО “Южный федеральный университет”',
                        link: 'https://sfedu.ru/',
                        img: 'img2',
                    },
                    {
                        description: 'ООО “ЭКСПОНЕНТА”',
                        link: 'https://exponent.sfedu.ru/',
                        img: 'img3',
                    },
                    {
                        description: 'Федеральный проект “Платформа университетского технологического предпринимательства”',
                        link: 'https://univertechpred.ru/',
                        img: 'img4',
                    },
                    {
                        description: 'Институт компьютерных технологий и информационной безопасности ЮФУ',
                        link: 'https://ictis.sfedu.ru/',
                        img: 'img5',
                    },
                    {
                        description: 'Фонд содействия развитию малых форм предприятий в научно-технической сфере',
                        link: 'https://fasie.ru/',
                        img: 'img6',
                    }];
            each partner in partners
                a(href=`${partner.link}` target="_blank" class="partners__list-link")
                    .partners__list-item
                        picture
                            source(data-lazy data-srcset=`img/partners/${partner.img}-mobile@1x.png 1x, img/partners/${partner.img}-mobile@2x.png 2x` media="screen and (max-width: 1023px)")
                            source(data-lazy data-srcset=`img/partners/${partner.img}-desk@1x.png 1x, img/partners/${partner.img}-desk@2x.png 2x` media="screen and (min-width: 1024px)")
                            img(class="partners__list-img" src="data:image/gif;base64,R0lGODlhAQABAIAAAP///wAAACH5BAEAAAAALAAAAAABAAEAAAICRAEAOw==")
                        .partners__list-description=partner.description


